        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/emote3"
        app:layout_constraintStart_toStartOf="@id/emote3"/>

    <ToggleButton
        android:id="@+id/emote6"
